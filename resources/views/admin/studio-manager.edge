    <script>
      function studioManager() {
        return {
          showModal: false,
          showDeleteModal: false,
          modalTitle: "",
          formAction: "",
          formMethod: "POST",
          submitButtonText: "",
          deleteAction: "",
          deleteStudioName: "",
          formData: {
            namaStudio: "",
            kapasitas: ""
          },
          openCreateModal() {
            this.modalTitle = "Tambah Studio Baru";
            this.formAction = "{{ route('admin.studios.store') }}";
            this.formMethod = "POST";
            this.submitButtonText = "Tambah Studio";
            this.formData = {
              namaStudio: "",
              kapasitas: ""
            };
            this.showModal = true;
          },
          async openEditModal(studioId) {
            try {
              const response = await fetch(`{{ route('admin.studios.index') }}/${studioId}`);
              const studio = await response.json();
              this.modalTitle = "Edit Studio";
              this.formAction = `{{ route('admin.studios.index') }}/${studioId}`;
              this.formMethod = "PUT";
              this.submitButtonText = "Update Studio";
              this.formData = {
                namaStudio: studio.namaStudio,
                kapasitas: studio.kapasitas
              };
              this.showModal = true;
            } catch (error) {
              console.error("Error fetching studio data:", error);
              alert("Terjadi kesalahan saat mengambil data studio");
            }
          },
          confirmDelete(studioId, studioName) {
            this.deleteAction = `{{ route('admin.studios.index') }}/${studioId}`;
            this.deleteStudioName = studioName;
            this.showDeleteModal = true;
          },
          closeModal() {
            this.showModal = false;
            this.formData = {
              namaStudio: "",
              kapasitas: ""
            };
          },
          closeDeleteModal() {
            this.showDeleteModal = false;
            this.deleteAction = "";
            this.deleteStudioName = "";
          }
        };
      }
      // Initialize Lucide icons
      
      document.addEventListener("DOMContentLoaded", function() {
        lucide.createIcons();
      });
    </script>
